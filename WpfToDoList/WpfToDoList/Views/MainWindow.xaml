<Window x:Class="WpfToDoList.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfToDoList.Views"
        mc:Ignorable="d"
        Title="To-Do Lists" Height="750" Width="1080">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 第一區，高度自動 -->
            <RowDefinition Height="*"/>
            <!-- 第二區，填滿剩下空間 -->
            <RowDefinition Height="Auto"/>
            <!-- 第三區，高度自動 -->
        </Grid.RowDefinitions>

        <!-- 第一個 GroupBox -->
        <GroupBox Grid.Row="0" Header="Search" Margin="10,10,10,0" FontSize="22">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label 
                    Grid.Column="0"
                    Content="Search By"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="10,0,0,0"
                    Height="35"
                    Width="110"
                    FontSize="20"/>
                <ComboBox 
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="10,0,0,0"
                    Width="120"/>
                <TextBox
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="10,0,10,0"
                    Height="32"
                    FontSize="20"
                    VerticalContentAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- 第二個 GroupBox -->
        <GroupBox Grid.Row="1" Header="Tasks"
          Margin="10,10,10,10"
          FontSize="22"
          VerticalAlignment="Stretch"
          HorizontalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,10,0,10">
                    <Label Content="Sorted By" FontSize="20" VerticalAlignment="Center"/>
                    <ComboBox Width="140" Margin="10,0,0,0" FontSize="18" VerticalAlignment="Center"/>
                    <CheckBox Content="Descending" Margin="10,0,0,0" FontSize="15" VerticalAlignment="Center"/>
                </StackPanel>
                <DataGrid Grid.Row="1"
                  Margin="10,0,10,10"
                  AutoGenerateColumns="True"
                  FontSize="20"
                  />
            </Grid>
        </GroupBox>

        <!-- 第三個 GroupBox -->
        <GroupBox Grid.Row="2" Header="Add Task"
          Margin="10,0,10,10"
          FontSize="22"
          VerticalAlignment="Bottom">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- 第一列：ComboBox 靠左 -->
                <ComboBox Grid.Row="0"
                  HorizontalAlignment="Left"
                  Margin="10,10,0,10"
                  Width="200"
                  FontSize="20"
                  />
                <!-- 第二列：Button + TextBox 橫向用 Grid 寫 -->
                <Grid Grid.Row="1" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                    Content="Add"
                    FontSize="18"
                    VerticalAlignment="Center"
                    Height="28"
                    Padding="20,0"/>
                    <TextBox Grid.Column="1"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     Height="28"
                     FontSize="16"
                     VerticalContentAlignment="Center"
                     Margin="10,0,0,0"/>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
